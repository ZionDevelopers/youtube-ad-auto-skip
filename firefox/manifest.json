{
	"browser_specific_settings": {
	  "gecko": {
		"id": "youtube-ad-closer@juliocesar.me",
		"strict_min_version": "57.0"
	  }
	},
	"content_scripts": [{
		"all_frames": true,
		"exclude_globs": [],
		"include_globs": ["*youtube.com*"],
		"js": ["includes/jquery-3.7.1.min.js", "includes/jquery.hotkeys.js", "includes/youtube.js"],
		"matches": ["*://*.youtube.com/*"],
		"run_at": "document_start"
	}],
	"description": "Automatically skip ads after X seconds",
	"icons": {
		"128": "icon.png" 
	},   
	"manifest_version": 2,
	"name": "YouTube Ad Auto-Skip",
	"short_name": "YT Ad Auto-Skip",	
	"options_ui": {
		"page": "options.html"
	},
	"permissions": [
		"storage"
	],
	"version": "1.3.25",
	"web_accessible_resources": ["includes/jquery-3.7.1.min.js", "includes/jquery.hotkeys.js", "includes/youtube.js", "jquery-3.7.1.min.map" ]
}
